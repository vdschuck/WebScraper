@model WebScraper.Models.WebScraper

@{
    ViewBag.Title = "Index - WebScraper";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        <h4>Página de Login</h4>       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (ViewData["Erro"] != null)
        {
            <div class="alert alert-warning">
                <strong>Erro: </strong> @ViewData["Erro"]
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Website, new SelectList(ViewBag.WebsiteList), " Select Website ")
                @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="container">
   <hr/>
    @if (ViewBag.List != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Tipo</th>
                    <th scope="col">Nome do local</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Data</th>
                </tr>
            </thead>
            <tbody>            
                @foreach (var Data in ViewBag.List)
                {
                    <tr>                        
                        <td>@Data[0]</td>
                        <td>@Data[1]</td>
                        <td>@Data[2]</td>
                        <td>@Data[3]</td>
                    </tr>
                }                  
            </tbody>
        </table>
    }   
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
